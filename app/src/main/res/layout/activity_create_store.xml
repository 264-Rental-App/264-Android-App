<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7D7D7D">

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="230dp"
                android:layout_height="102dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat"
                android:text="Create Your Store"
                android:textAlignment="textStart"
                android:textColor="#FFD59E"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/s_store_name"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Store Name"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/s_street_address"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Street Address (e.g. 123 Some Street)"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/s_city"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="City"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/s_state"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="State"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/s_zip_code"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Zip Code"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/s_store_contact"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Store Contact Number (e.g. 888-888-8888)"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/s_category_spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:entries="@array/equipment_category"
                android:theme="@style/spinnerColor"/>

            <Button
                android:id="@+id/createStoreInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/search_button_rounded_corner"
                android:text="CREATE"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>