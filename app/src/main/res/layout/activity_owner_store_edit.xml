<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2d6d6"
    tools:context=".CustomerHomeActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="back"
        android:background="@drawable/back_rounded_corner"/>

    <TextView
        android:id="@+id/storeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:text="STORE INFO"
        android:textStyle="bold"
        android:layout_below="@id/back"/>

    <TextView
        android:id="@+id/storeName"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeInfo"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Store Name: "
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/storeNameCurr"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="storeName "
        android:layout_below="@+id/storeInfo"
        android:layout_toRightOf="@id/storeName"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeName"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Address : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressCurr"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="address"
        android:layout_below="@+id/storeName"
        android:layout_toRightOf="@id/address"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressCurr"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Phone : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneNumberCurr"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="3230000000"
        android:layout_below="@+id/addressCurr"
        android:layout_toRightOf="@id/phoneNumber"/>

    <TextView
        android:id="@+id/updateInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="INFO UPDATE"
        android:textStyle="bold"
        android:layout_below="@id/phoneNumber"/>

    <TextView
        android:id="@+id/storeNameUpdate"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateInfo"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Store Name : "
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/storeNameEdit"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text=""
        android:layout_below="@+id/updateInfo"
        android:layout_toRightOf="@id/storeNameUpdate"/>

    <TextView
        android:id="@+id/addressUpdate"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeNameUpdate"
        android:layout_marginTop="9dp"
        android:gravity="right"
        android:text="Address : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addressEdit"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeNameEdit"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@id/addressUpdate"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneUpdate"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressEdit"
        android:layout_marginTop="2dp"
        android:gravity="right"
        android:text="Phone : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text=""
        android:layout_below="@+id/addressEdit"
        android:layout_toRightOf="@id/phoneUpdate"/>

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/phoneEdit"
        android:backgroundTint="@color/teal_700"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="update"
        android:background="@drawable/search_button_rounded_corner"/>

</RelativeLayout>